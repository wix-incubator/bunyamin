{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
